<div class="col">
   <div class="row">
      <h1 class="text text-primary text-center">TOYS ORDER</h1>
   </div>
   <div class="row">
      <table class="table table-bordered text-center">
         <tr> 
            <th>Toy name</th>
            <th>{{ name }}</th>
         </tr>
         <tr>
            <th>Toy price</th>
            <th>${{ price }}</th>
         </tr>
         <tr>
            <th>Order quantity</th>
            <th>{{ quantity }}</th>
         </tr>
         <tr>
            <th>Total price</th>
            <th>${{ total }}</th>
         </tr>
         <tr class="text-center">
            <th colspan="2">
               <a class="btn btn-danger" href="/customer">Confirm</a>
            </th>
         </tr>
      </table>
   </div>
</div>
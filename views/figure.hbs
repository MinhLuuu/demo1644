<table class="table table-primary text-center bg-light mt-10 mb-10">
    <tr>
        <th class="h1 text text-danger" colspan="8">Products ({{ total1 }})</th>
        <th style="vertical-align: middle;">
            <a class="btn btn-success" href="/add1">Add Product</a>
            <a class="btn btn-danger" href="/drop1" onclick="return confirm('Delete all products ?');">Delete All!</a>
        </th>
    </tr>
    <tr class="column">
        <th style="color: green;">Name</th>
        <th style="color: chocolate;">Origin</th>
        <th style="color: green;">Price</th>
        <th style="color: chocolate;">Brand</th>
        <th style="color: green;">Brand Origin</th>
        <th style="color: chocolate;">Quantity</th>
        <th style="color: green;">Image</th>
        <th style="color: green;">Date</th>
        <th style="color:brown">Menu</th>
    </tr>
    {{#each mohinh }}
    <tr>
        <th>{{ name }}</th>
        <th>{{ origin }}</th>
        <th>${{ price }}</th>
        <th>{{ brand }}</th>
        <th>{{ brand_origin }}</th>
        <th>{{ quantity }}</th>
        <th>
            <img class="zoom" width="300" height="200" src="{{ image }}">
        </th>
        <th>{{ date }}</th>
        <th>
            <a class="btn btn-warning" href="/edit1/{{_id}}">Edit Product</a>
            <a class="btn btn-danger" href="/delete1/{{_id}}" onclick="return confirm('Delete this figure ?');">Delete One</a>
        </th>
    </tr>
    {{/each}}
</table>